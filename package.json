{
  "name": "preview-easy",
  "displayName": "preview-easy",
  "description": "preview-easy",
  "version": "0.0.2",
  "author": "ahaoboy",
  "license": "MIT",
  "publisher": "ahaoboy",
  "homepage": "https://github.com/ahaoboy/preview-easy",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahaoboy/preview-easy.git"
  },
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onFileSystem:ans",
    "onFileSystem:html",
    "onFileSystem:svg",
    "onFileSystem:wem",
    "onFileSystem:zip",
    "onFileSystem:rar",
    "onFileSystem:7z",
    "onFileSystem:tar",
    "onFileSystem:gz",
    "onFileSystem:dot"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "ansiPreview",
          "name": "ansi preview"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.openExtensionPage",
        "title": "Open Extension's Page in the Marketplace"
      },
      {
        "command": "extension.openPreviewOnFocus",
        "title": "Open Preview"
      },
      {
        "command": "extension.openPreviewMenu",
        "title": "Open preview"
      },
      {
        "command": "extension.openPreviewOnEditorShortcut",
        "title": "Open preview"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+t",
        "command": "extension.openPreviewOnFocus",
        "when": "editorTextFocus",
        "mac": "cmd+shift+t"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceFilename =~ /.*\\.(ans|html|svg|wem|zip|rar|7z|tar|gz|dot)$/",
          "command": "extension.openPreviewOnEditorShortcut",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceFilename =~ /.*\\.(ans|html|svg|wem|zip|rar|7z|tar|gz|dot)$/",
          "command": "extension.openPreviewMenu",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "pre-check": "npm run format && npm run lint:fix",
    "vscode:prepublish": "pnpm run bundle",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "bundle": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "biome lint",
    "test": "vscode-test",
    "format": "biome format --write  ./",
    "lint:fix": "biome lint ./ --write --unsafe",
    "package": "vsce package --no-dependencies",
    "publish": " vsce publish --no-dependencies"
  },
  "dependencies": {
    "ansi2": "0.1.15",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "22.7.8",
    "@types/vscode": "^1.94.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2",
    "vsce": "^2.15.0"
  }
}
